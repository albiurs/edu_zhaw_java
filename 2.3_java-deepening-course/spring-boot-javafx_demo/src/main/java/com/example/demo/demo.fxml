<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<!--
    GridPane = one of the JavaFX layouts:
    fx:controller attribute = class to be the controller for this window:
    packageName.ClassName

-->
<?import javafx.scene.text.Font?>
<GridPane fx:controller="com.example.demo.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Welcome to JavaFX!" textFill="green">
        <font>
            <Font name="Times New Roman bold" size="70"></Font>
        </font>
    </Label>
</GridPane>